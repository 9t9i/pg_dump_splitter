{
  "compilerOptions": {
    "target": "es2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowImportingTsExtensions": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "eslint.config.mjs",
    "ava.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
